@page
@model WebAssignemnt.Pages.Admin.Author.CreateAuthorModel
@{
}


<form method="post">

    <input asp-for="Author.ID" />

    <div>
        <p>
            <label asp-for="Author.GivenName"></label>
            <input type="text" asp-for="Author.GivenName" />
            <span asp-validation-for="Author.GivenName"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.LastName"></label>
            <input type="text" asp-for="Author.LastName" />
            <span asp-validation-for="Author.LastName"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.Birthday"></label>
            <input type="date" asp-for="Author.Birthday" />
            <span asp-validation-for="Author.Birthday"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.EmailAddress"></label>
            <input type="email" asp-for="Author.EmailAddress" />
            <span asp-validation-for="Author.EmailAddress"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.WebsiteAddress"></label>
            <input type="url" asp-for="Author.WebsiteAddress" />
            <span asp-validation-for="Author.WebsiteAddress"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.TelephoneNumber"></label>
            <input type="tel" asp-for="Author.TelephoneNumber" />
            <span asp-validation-for="Author.TelephoneNumber"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.Country"></label>
            <input type="text" asp-for="Author.Country" />
            <span asp-validation-for="Author.Country"></span>
        </p>
    </div>

    <div>
        <p>
            <label asp-for="Author.Province"></label>
            <input type="text" asp-for="Author.Province" />
            <span asp-validation-for="Author.Province"></span>
    </div>

    <div>
        <label asp-for="Author.PostalCode"></label>
        <input type="text" asp-for="Author.PostalCode" />
        <span asp-validation-for="Author.PostalCode"></span>
        </p>
    </div>

    <p> <button type="submit"> Submit </button> </p>

</form>

<div asp-validation-summary="All"> </div>


@section Scripts
{

    <script src="/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}