@model WebAssignemnt.Pages.Admin.Author.AuthorCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].GivenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].WebsiteAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].TelephoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuthorModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GivenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
